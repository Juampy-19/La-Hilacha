<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>

    <%- include('./partials/header.ejs') %>

    <main>
        <section class="resumenPedido">
            <h2>Resumen del pedido</h2>

            
            <% if (empanadas.length > 0 ) { %>
                <h4>Empanadas</h4>
                <% empanadas.forEach(empanada => { %>
                    <p class="productSelected">Sabor: <%= empanada.sabor %> - Cantidad: <%= empanada.cantidad %></p>
                <% }) %>
            <% } %>

            <% if (pizzas.length > 0 ) { %>
                <h4>Pizzas</h4>
                <% pizzas.forEach(pizza => { %>
                    <p class="productSelected">Sabor: <%= pizza.sabor %> - Tamaño: <%= pizza.tamaño %> - Cantidad: <%= pizza.cantidad %></p>
                <% }) %>
            <% } %>

            <h3>Total del pedido: $<%= totalSeleccionado %></h3>

            <div class="buttonContinuar">
                <form action="/formDatos" method="GET">
                    <button class="button" type="submit">Continuar</button>
                </form>
            </div>
        </section>
    </main>

    <%- include('./partials/footer.ejs') %>
    
</body>
</html>