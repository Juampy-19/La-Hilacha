<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head.ejs') %>

<body>

    <%- include('./partials/header.ejs') %>
    
    <main>
        <section class="confirmPedido">
            <h2>Pedido confirmado</h2>

            <!-- Mostrar datos del cliente -->
            <h3>Datos del cliente</h3>
            <p>Nombre: <%= name %></p>
            <p>Teléfono: <%= phone %></p>
            <p>Dirección: <%= street %> <%= altura %>
                <% if (!piso) { %>
                    Piso: -
                <% } else { %>
                    Piso: <%= piso %>
                <% } %>
                <% if (!dpto) { %>
                    Dpto: -
                <% } else { %>
                    Dpto: <%= dpto %>
                <% } %>
            </p>
            <% if (!message) { %>
                <p>Mensaje adicional: -</p>
            <% } else { %>
                <p>Mensaje adicional: <%= message %></p>
            <% } %>

            <!-- Mostrar los productos seleccionados -->
            <h3>Productos seleccionados</h3>
            <% if (empanadas.length > 0 ) { %>
                <h4>Empanadas</h4>
                <% empanadas.forEach(empanada => { %>
                    <p>Sabor: <%= empanada.sabor %> - Cantidad: <%= empanada.cantidad %></p>
                <% }) %>
            <% } %>

            <% if (pizzas.length > 0 ) { %>
                <h4>Pizzas</h4>
                <% pizzas.forEach(pizza => { %>
                    <p>Sabor: <%= pizza.sabor %> - Tamaño: <%= pizza.tamaño %> - Cantidad: <%= pizza.cantidad %></p>
                <% }) %>
            <% } %>

            <h3>Total: $<%= totalSeleccionado %></h3>

            <form action="/limpiarSessions" method="GET">
                <button class="button">Volver al inicio</button>
            </form>
        </section>

    </main>

    <%- include('./partials/footer.ejs') %>

</body>
</html>