                         <%- include('./partials/loader.ejs') %>

                    <% } else { %>

                        <%- include('./partials/selecEmpanadaCategoria.ejs', { tituloCategoria: 'Tradicionales', empanadas: empanadasData.tradicionales, precios: empanadasData.precioTradicionales }) %>
